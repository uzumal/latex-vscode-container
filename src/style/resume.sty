%--------------------------------------------------------------------%
% 定義
%--------------------------------------------------------------------%
\def\type#1{\gdef\@type{#1}}
\def\year#1{\gdef\@year{#1}}
\def\month#1{\gdef\@month{#1}}
\def\date#1{\gdef\@date{#1}}

%--------------------------------------------------------------------%
% タイトル
%--------------------------------------------------------------------%
\def\maketitle#1#2#3#4{
	\twocolumn[
		\vspace{-5mm}
		\begin{center}

			\newcount\year
			\year = \@year
			\ifnum\@month<3
				\advance\year -1
			\fi

			\renewcommand{\baselinestretch}{0.8} % 行間の倍率指定

			\ifnum\@type=1
				{\small{\bf {\the\year} 年度 修士論文試問会（{\@year}年{\@month}月{\@date}日）}}
			\fi
			\ifnum\@type=2
				{\small{\bf {\the\year} 年度 卒業論文発表会（{\@year}年{\@month}月{\@date}日）}}
			\fi
			\ifnum\@type=3
				{\small{\bf {\the\year} 年度 月例発表会（{\@year}年{\@month}月{\@date}日）}}
			\fi
			\ifnum\@type=4
				{\small{\bf {\the\year} 年度 研究室合同中間発表会（{\@year}年{\@month}月{\@date}日）}}
			\fi
			\hfill {\small{\bf ネットワーク情報システム研究室}}

			\vspace{-3mm}

			% 横線
			\begin{picture}(525,3)
				\put(0,2){\line(1,0){515}}
			\end{picture}

			\vspace{2mm}

			\LARGE{#1} \\ \vspace{2mm}
			\Large{#2} \\ \vspace{4mm}
			\large{#3 / #4} \\ \vspace{0mm}

			% 横線
			% \begin{picture}(525,3)
			% 	\put(0,2){\line(1,0){515}}
			% \end{picture}

		\end{center}
		\vspace{4mm}
	]
}
