\pagestyle{plain}

%--------------------------------------------------------------------%
%表紙
%--------------------------------------------------------------------%
\def\type#1{\gdef\@type{#1}}
\def\year#1{\gdef\@year{#1}}
\def\month#1{\gdef\@month{#1}}
\def\date#1{\gdef\@date{#1}}

%--------------------------------------------------------------------%
%タイトル
%--------------------------------------------------------------------%
\def\makesubtitle#1#2#3#4#5{
\twocolumn[
	\vspace{-7mm}
	\begin{center}
	\newcount\year
	\year = \@year
	\ifnum\@month<3
		\advance\year -1
	\fi
	\setlength{\baselineskip}{5.0pt}
	\ifnum\@type=1
		{\small{\bf {\the\year} 年度 修士論文試問会（{\@year}年{\@month}月{\@date}日）}}
	\else
		\ifnum\@type=2
			{\small{\bf {\the\year} 年度 卒業論文発表会（{\@year}年{\@month}月{\@date}日）}}
		\else
			{\small{\bf {\the\year} 年度 月例発表会（{\@year}年{\@month}月{\@date}日）}}
	\fi\fi
	\hfill {\small{\bf ネットワーク情報システム研究室}}
	\begin{picture}(525,3)
		\put(0,2){\line(1,0){515}}
	\end{picture}
	\vspace{1mm}

	{\bf {\Large {#1}}\\
	\smallskip {#2}}\\ \bigskip

	{\large {#3}}\\
	\smallskip {\small #4 \textsc{#5}}\\ \vspace{0mm}

%	\begin{picture}(500,3)
%		\put(0,2){\line(1,0){500}}
%	\end{picture}
	\end{center}

	\vspace{5mm}]
}

