%--------------------------------------------------------------------%
%tabcaptionとfigcaptionの定義
%--------------------------------------------------------------------%
\def\tabcaption{\def\@captype{table}\caption}
\def\figcaption{\def\@captype{figure}\caption}

\def\term#1{
	{\bf #1}
}

\def\path#1{
	\texttt{#1}
}

%--------------------------------------------------------------------%
%figref，tabref，eqrefを定義
%--------------------------------------------------------------------%
\def\figref#1{\figurename\hskip1ex \ref{#1}}
\def\tabref#1{\tablename\hskip1ex \ref{#1}}
\def\eqref#1{式(\ref{#1})}

%--------------------------------------------------------------------%
%キャプションの：を削除
%cf. http://www.h4.dion.ne.jp/~latexcat/column/column2.html#figno
%--------------------------------------------------------------------%
\long\def\@makecaption#1#2{% #1: \fnum@figure/\fnum@table, #2: <caption>
  \vskip\abovecaptionskip
  \iftdir\sbox\@tempboxa{#1\hskip1zw#2}%
    \else\sbox\@tempboxa{#1\hskip1zw #2}%
  \fi
  \ifdim \wd\@tempboxa >\hsize
    \iftdir #1\hskip1zw#2\relax\par
      \else #1\hskip1zw #2\relax\par\fi
  \else
    \global \@minipagefalse
    \hbox to\hsize{\hfil\box\@tempboxa\hfil}%
  \fi
  \vskip\belowcaptionskip}
